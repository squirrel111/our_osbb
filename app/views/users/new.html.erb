<h1>Sign up</h1>

<%= form_for :user, url: users_path do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :adres %><br>
    <%= f.text_field :adres %>
  </p>

  <p>
    <%= f.label :room %><br>
    <%= f.number_field :room %>
  </p>
  
  <p>
    <%= f.label :password%>
    <br>
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.submit 'Create user'%>
  </p>
<% end %>

<%= link_to 'Back', login_path %>
